<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Backdound1"
    android:orientation="horizontal"
    android:padding="15dp"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_tourguide_picture"
        android:layout_width="100dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"
        android:layout_height="100dp" />
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TourGuide Name"
        android:textColor="@color/Text"
        android:textSize="16sp"
        android:id="@+id/tv_tourguide_name"/>
    <LinearLayout
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_tourguide_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE"
        android:textColor="@color/Text"
        android:textSize="13sp"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="     "
         >
     </TextView>

    <TextView
        android:id="@+id/tv_tourguide_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Text"
        android:text="LANGUAGE"
        android:textSize="13sp"
         /></LinearLayout>

        <RatingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:max="5"
            android:numStars="5"
            android:scaleX=".5"
            android:scaleY=".5"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp"></RatingBar>

    </LinearLayout>





</LinearLayout>